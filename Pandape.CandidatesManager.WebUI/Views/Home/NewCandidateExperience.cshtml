@using Pandape.CandidatesManager.Domain.Entities
@model CandidateExperience

<div class="container">
    <h2 class="text-center">Add New Candidate Experience</h2>
    <div class="row">
        <div class="col-6 offset-3">
            <form asp-action="CreateCandidateExperience" method="POST">
                <input type="hidden" asp-for="IdCandidate"/>
                <input type="hidden" asp-for="IdCandidateExperience"/>
                <input type="hidden" asp-for="InsertDate"/>
                <input type="hidden" asp-for="ModifyDate"/>

                <div class="form-group">
                    <label asp-for="Company"></label>
                    <input type="text" asp-for="Company" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="Job"></label>
                    <input type="text" asp-for="Job" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input type="text" asp-for="Description" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="Salary"></label>
                    <input type="number" asp-for="Salary" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="BeginDate">Begin date</label>
                    <input type="date" asp-for="BeginDate" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate">End date</label>
                    <input type="date" asp-for="EndDate" class="form-control"/>
                </div>

                <input type="submit" class="btn btn-outline-primary btn-block" value="Save"/>
                <a asp-action="CandidateDetails" asp-route-id="@Model.IdCandidate" class="btn btn-outline-danger btn-block">Cancel</a>
            </form>
        </div>
    </div>
</div>