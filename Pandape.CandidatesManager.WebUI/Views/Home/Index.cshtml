@using Pandape.CandidatesManager.Domain.Entities
@model List<Candidate>

<div class="container">
    <div class="row">
        <div class="col-12">
            <a asp-action="NewCandidate" class="btn btn-outline-success float-right">New Candidate</a>
        </div>
    </div>
    <div class="row">
        @if(Model.Count==0){
            <p>No candidates found!</p>
        }else{
            <table class="table">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Name</th>
                        <th>Surename</th>
                        <th>Birth date</th>
                        <th>Email</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.Name</td>
                            <td>@e.Surename</td>
                            <td>@e.Birthdate.ToString("dd/MM/yyyy")</td>
                            <td>@e.Email</td>
                            <td>@e.InsertDate</td>
                            <td>@e.ModifyDate</td>
                            <td align="center">
                                <a asp-action="CandidateDetails" asp-route-id="@e.IdCandidate" class="btn btn-outline-primary">Details</a>
                                @*<a asp-action="EditCandidate" asp-route-id="@e.IdCandidate" class="btn btn-outline-primary">Details</a>*@
                                <a asp-action="DeleteCandidate" 
                                    asp-route-id="@e.IdCandidate" 
                                    class="btn btn-outline-danger"
                                    onclick="return confirm('Are you sure to remove this candidate?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
